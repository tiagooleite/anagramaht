<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/groupJogadorCronometro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewJogador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Chronometer
            android:id="@+id/chronometer1"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewPalavraEmbaralhada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/resposta"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/botaoEnviar"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/enviar" />

    <LinearLayout
        android:id="@+id/groupCaixinhas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/caixa_letra1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="70dp"
            android:contentDescription="@string/ajuda"
            android:src="@drawable/caixa_letra"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/caixa_letra2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="70dp"
            android:contentDescription="@string/ajuda"
            android:src="@drawable/caixa_letra"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/caixa_letra3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="70dp"
            android:contentDescription="@string/ajuda"
            android:src="@drawable/caixa_letra"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/caixa_letra4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="70dp"
            android:contentDescription="@string/ajuda"
            android:src="@drawable/caixa_letra"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/caixa_letra5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="70dp"
            android:contentDescription="@string/ajuda"
            android:src="@drawable/caixa_letra"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/caixa_letra6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="70dp"
            android:contentDescription="@string/ajuda"
            android:src="@drawable/caixa_letra"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/caixa_letra7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="70dp"
            android:contentDescription="@string/ajuda"
            android:src="@drawable/caixa_letra"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/caixa_letra8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="70dp"
            android:contentDescription="@string/ajuda"
            android:src="@drawable/caixa_letra"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupAcertos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/acertosColuna1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/acertosColuna2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_gravity="left"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/acertosColuna3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_gravity="left"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>